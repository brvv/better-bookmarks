{
  "name": "Better Bookmarks",
  "description": "A simplified interface for managing in-browser bookmarks",
  "version": "1.0.2",
  "manifest_version": 2,
  "homepage_url": "https://github.com/brvv/better-bookmarks",
  "background": {
    "page": "./background/background.html"
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_title": "Better Bookmarks",
    "default_icon": {
      "48": "./icon.png"
    }
  },
  "permissions": ["bookmarks", "storage", "*://icons.duckduckgo.com/*"],
  "icons": {
    "48": "./icon.png"
  }
}
