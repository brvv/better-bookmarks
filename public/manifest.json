{
  "name": "Better Bookmarks",
  "description": "Actually usable bookmarks.",
  "version": "1.0.0",
  "manifest_version": 2,
  "homepage_url": "https://github.com",
  "background": {
    "scripts": ["./popup/background.js"]
  },
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_title": "UUID Generator",
    "default_icon": {
      "48": "./icon.png",
      "96": "./icon.png"
    }
  },
  "permissions": ["bookmarks"],
  "icons": {
    "48": "./icon.png",
    "96": "./icon.png"
  }
}
